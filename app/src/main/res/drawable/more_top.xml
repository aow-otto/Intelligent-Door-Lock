<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><!--没点击按钮的时候-->
        <shape>
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp" />
            <gradient android:centerColor="#B357A1BD" android:endColor="#B37BC7E4" android:startColor="#B37BC7E4" />
        </shape>
    </item>

    <item android:state_pressed="true"><!--点击按钮的时候-->
        <shape>
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp" />
            <gradient android:centerColor="#57A1BD" android:endColor="#7BC7E4" android:startColor="#7BC7E4" />
        </shape>
    </item>
</selector>