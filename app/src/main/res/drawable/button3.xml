<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><!--没点击按钮的时候-->
        <shape>
            <corners android:radius="30dp" />
            <gradient android:centerColor="#B3BCAD1C" android:endColor="#B3C8BF68" android:startColor="#B3C8BF68" />
        </shape>
    </item>

    <item android:state_pressed="true"><!--点击按钮的时候-->
        <shape>
            <corners android:radius="30dp" />
            <gradient android:centerColor="#BCAD1C" android:endColor="#C8BF68" android:startColor="#C8BF68" />
        </shape>
    </item>
</selector>