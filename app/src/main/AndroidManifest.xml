<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.intelligentdoorlock">

    <application
        android:name=".GlobalVarious"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BluetoothActivity"
            android:label="蓝牙配对"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MoreFunctionsActivity"
            android:label="更多功能"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FacesetControlActivity"
            android:label="人脸识别设置"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FaceControlActivity"
            android:label="人脸识别管理"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IndicatorLightActivity"
            android:label="指示灯说明"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutUsActivity"
            android:label="关于我们"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

    <uses-permission
        android:name="android.permission.BLUETOOTH"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

</manifest>